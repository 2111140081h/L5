<h1>ようこそ　<%= session[:login_uid] %>　さん</h1>
<br>

<h1>ツイート</h1>

<div id="tweets">
    <% @tweets.each do |tweet| %>
        <%= render partial: "tweet", locals: { tweet: tweet } %>
    <% end %>
</div>
<br>

<h1>ツイート作成</h1>
<%= form_tag '/tweet/create', method: :post, data: { turbo: false } do %>
    <%= label_tag :message, 'メッセージ' %>
    <%= text_field_tag :message %><br>
    <%= submit_tag 'ツイート' %>
<% end %>

<br>
<br>
<%= button_to "ログアウト", top_logout_path, method: :get %>